{% extends 'base.html.twig' %}

{% block title %}Liste Classes{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste Classes</h4>

                    <div class="row space20">
                        <div class="col-12">
                            <a CLASS="btn btn-success pull-right" href="{{ path('classes_new') }}">Cr√©er</a>
                        </div>
                    </div>
                    <div class="row space20">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Titre</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for class in classes %}
                                        <tr>
                                            <td>{{ class.id }}</td>
                                            <td>{{ class.titre }}</td>
                                            <td>
                                                <a class="badge badge-info"
                                                   href="{{ path('classes_edit', {'id': class.id}) }}">edit</a>
                                                {{ include('classes/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="row space20">
                        <div class="col-12">
                            {{ knp_pagination_render(classes, null, {}, {
                                'position': 'centered',
                                'size': 'large',
                                'rounded': true,
                            }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

